#include <stdio.h>
int main(){
	printf("number of days in a month\n");
	printf("pick a month of ur choice\n");
	printf("1.january\n2.february\n3.march\n4.april\n5.may\n6.june\n7.july\n8.august\n9.september\n10.october\n11.november\n12.december\n");
	int r;
	int oddmonth=31,february=28,evenmonth=30;
	printf("enter the month number here: ");
	scanf("%d",&r);
	if(r==1||r==3||r==5||r==7||r==8||r==10||r==12){printf("the days in this month are %d\n",oddmonth);}
	if(r==4||r==6||r==9||r==11){printf("the days in this month are %d\n",evenmonth);}
	if(r==2){printf("the days in this month are %d\n",february);}
	
}
